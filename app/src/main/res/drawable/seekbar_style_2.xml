<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1dip" />

            <gradient
                android:angle="270"
                android:centerColor="#a4a2a2"
                android:centerY="0.75"
                android:endColor="#a4a2a2"
                android:startColor="#a4a2a2" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#e9e4e4"
                    android:centerY="0.75"
                    android:endColor="#e9e4e4"
                    android:startColor="#e9e4e4" />
            </shape>
        </clip>
    </item>

</layer-list>